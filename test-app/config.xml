<?xml version='1.0' encoding='utf-8'?>
<widget id="io.gl.ionicsecurefilesystem" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GL Ionic Secure File System</name>
    <description>
        Test app for the Geek Learning Ionic Secure File System
    </description>
    <author email="michel.vidailhet@gmail.com">
        Geek Learning
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="com-intel-security-cordova-plugin" spec="~2.0.2" />
    <plugin name="cordova-plugin-secure-storage" spec="~2.6.1" />
</widget>
